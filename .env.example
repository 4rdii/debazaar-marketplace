# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=debazaar_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Blockchain Configuration
# Network: 'arbitrum_sepolia' or 'arbitrum_one'
BLOCKCHAIN_NETWORK=arbitrum_sepolia

# Arbiscan API Key (Optional but recommended for dynamic ABI loading)
# Get your free API key at: https://arbiscan.io/myapikey (for Arbitrum One)
# or https://sepolia.arbiscan.io/myapikey (for Arbitrum Sepolia)
# Without this, ABIs will fallback to hardcoded versions
ARBISCAN_API_KEY=

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Privy Configuration (if using Privy auth)
PRIVY_APP_ID=your-privy-app-id
